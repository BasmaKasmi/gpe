# YuniShea Backend Configuration
APP_NAME="YuniShea Backend"
APP_VERSION="1.0.0"
API_PREFIX="/api/v1"

# Database
DATABASE_URL="mysql://root:your_password@localhost:3306/yunishea_backend_db"

# JWT
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST="localhost"

# Microservices Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
LISTING_SERVICE_PORT=3003
MESSAGING_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005

# Environment
NODE_ENV="development"

# YuniShea Backend Features
ENABLE_FOOD_SHARING=true
ENABLE_OBJECT_EXCHANGE=true
ENABLE_ACADEMIC_HELP=true
ENABLE_EVENT_MANAGEMENT=true

# Security
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Email Service
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
YUNISHEA_EMAIL_FROM="noreply@yunishea.com"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/yunishea-backend.log"